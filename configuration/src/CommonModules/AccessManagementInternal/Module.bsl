	If Context.Aliases.Count() > 0 Then
		Return;
	EndIf;
	
	Context.Aliases.Insert(Upper("ThisList"), New Structure("Alias, Table", "ThisList"));
	Context.Aliases.Insert(Upper("ThisList"),   New Structure("Alias, Table", "ThisList"));
	
