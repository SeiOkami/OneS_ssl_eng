	QueryText =
	"SELECT
	|	Users.Ref AS User,
	|	Users.IBUserID
	|FROM
	|	Catalog.AccessGroups.Users AS AccessGroupsUsers_SSLy
	|		INNER JOIN Catalog.Users AS Users
	|		ON (AccessGroupsUsers_SSLy.Ref = &AdministratorsAccessGroup)
