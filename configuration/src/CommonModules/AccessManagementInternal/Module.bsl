			Context.ConditionPartsToSelectLeadingListsRights.Add(FilterCriterion);
		Else
			Context.ConditionPartsToSelectRightsByRightsSettingsOwners.Add(FilterCriterion);
		EndIf;
	EndDo;
	
EndProcedure

