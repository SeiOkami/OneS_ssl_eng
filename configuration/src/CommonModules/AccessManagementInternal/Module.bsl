					If FieldProperties.AccessKeySavingTypes.Find(Type) <> Undefined
					 Or Type = MOIDType
					 Or Type = EOIDType Then
						Continue;
					EndIf;
					IncorrectTypes.Add(TypeNameInQueryLanguage(Type));
